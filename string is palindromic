#include   
  
char* firstPalindrome(char** words, int wordsSize) {  
    for (int i = 0; i &lt; wordsSize; i++) {  
        int start = 0;  
        int end = strlen(words[i]) - 1;  
        int isPalindrome = 1;  
  
        while (start &lt; end) {  
            if (words[i][start]!= words[i][end]) {  
                isPalindrome = 0;  
                break;  
            }  
            start++;  
            end--;  
        }  
  
        if (isPalindrome) {  
            return words[i];  
        }  
    }  
  
    return "";  
}  
